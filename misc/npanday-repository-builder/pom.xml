      <artifactId>maven-install-plugin</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>npanday.plugin</groupId>
      <artifactId>maven-link-plugin</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>npanday.plugin</groupId>
      <artifactId>maven-mojo-generator-plugin</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>npanday.plugin</groupId>
